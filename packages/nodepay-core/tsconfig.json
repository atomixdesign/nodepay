{

  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",                        /* Redirect output structure to the directory. */
    "rootDir": "./src",                         /* Specify the root directory of input files. Use to control the output directory structure with --outDir. */
    "composite": true,
    "typeRoots": [
      "./build",
      "./build/features",
      "./build/gateways",
      "./build/network",
      "./build/validation",
      "./build/types",
      "./build/utils",
    ]
  },
  "include": ["./src/**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "./src/**/*.test.ts"
  ],
}
