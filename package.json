{
  "name": "@atomixdesign/nodepay",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --no-bail",
    "test": "lerna run test --stream",
    "reset": "concurrently \"yarn --silent clean\" \"yarn --silent clean:artifacts\"",
    "clean:artifacts": "shx rm -R node_modules packages/**/node_modules packages/**/coverage packages/**/docs",
    "clean": "shx rm -R packages/**/build packages/**/tsconfig.tsbuildinfo",
    "cli": "node utils/nodepay-cli",
    "docs": "node utils/doc-gen",
    "docs:prebuild": "lerna run build:docs --no-bail",
    "docs:init": "docsify init ./docs",
    "lint": "lerna run lint",
    "publish:dev": "lerna publish --registry http://localhost:4873"
  },
  "devDependencies": {
    "@types/inquirer": "^6.5.0",
    "@types/node": "^14.0.19",
    "@types/yargs": "^15.0.5",
    "concurrently": "^5.2.0",
    "console-stamp": "^3.0.0-rc4.2",
    "docsify-cli": "^4.4.1",
    "eslint": "^7.1.0",
    "eslint-plugin-ava": "^10.3.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-use-extend-native": "^0.5.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-unicorn": "^20.1.0",
    "glob": "^7.1.6",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "mkdirp": "^1.0.4",
    "mustache": "^4.0.1",
    "ncp": "^2.0.0",
    "shx": "^0.3.2",
    "typedoc": "^0.17.8",
    "typedoc-plugin-markdown": "^2.4.0",
    "typescript": "^3.9.6",
    "yargs": "^15.4.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
